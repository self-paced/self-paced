{
  "baseUrl": ".",
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": ["esnext", "DOM"],
    "module": "commonjs",
    "target": "es2022"
  },
  "include": ["src/**/*.ts", "serverless.ts"]
}
